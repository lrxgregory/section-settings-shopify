<div style="background: {{ section.settings.background }}; color: {{ section.settings.body_text }}; font-family: {{ section.settings.heading_font }}; font-size: {{ section.settings.font_size }}px; text-align: {{ section.settings.alignment }}; padding: 20px;">
  
  {% if section.settings.show_announcement %}
    <p><strong>üì¢ Announcement:</strong> This is an announcement bar!</p>
  {% endif %}

  <h1 style="text-align: {{ section.settings.logo_aligment }};">Demo: Section Settings</h1>

  <p><strong>üî¢ Products per page:</strong> {{ section.settings.products_per_page }}</p>
  <p><strong>üìè Font size:</strong> {{ section.settings.font_size }}px</p>
  <p><strong>üñçÔ∏è Color Scheme:</strong> {{ section.settings.color_scheme }}</p>
  <p><strong>‚ÜïÔ∏è Vertical Alignment:</strong> {{ section.settings.vertical_alignment }}</p>
  <p><strong>üìè Size:</strong> {{ section.settings.sizes }}</p>

  <h2>{{ section.settings.footer_linklist_title }}</h2>
  <p>{{ section.settings.home_welcome_message }}</p>

  {% if section.settings.article != blank %}
    <p><strong>üì∞ Article Selected:</strong> <a href="{{ section.settings.article.url }}">{{ section.settings.article.title }}</a></p>
  {% endif %}

  {% if section.settings.blog != blank %}
    <p><strong>‚úçÔ∏è Blog Selected:</strong> <a href="{{ section.settings.blog.url }}">{{ section.settings.blog.title }}</a></p>
  {% endif %}

  {% if section.settings.collection != blank %}
    <p><strong>üõç Collection:</strong> <a href="{{ section.settings.collection.url }}">{{ section.settings.collection.title }}</a></p>
  {% endif %}

  {% if section.settings.collection_list != blank %}
    <h3>Collections:</h3>
    <ul>
      {% for collection in section.settings.collection_list %}
        <li><a href="{{ collection.url }}">{{ collection.title }}</a></li>
      {% endfor %}
    </ul>
  {% endif %}

  {% if section.settings.product != blank %}
    <p><strong>üõí Product:</strong> <a href="{{ section.settings.product.url }}">{{ section.settings.product.title }}</a></p>
  {% endif %}

  {% if section.settings.product_list != blank %}
    <h3>Products:</h3>
    <ul>
      {% for product in section.settings.product_list %}
        <li><a href="{{ product.url }}">{{ product.title }}</a></li>
      {% endfor %}
    </ul>
  {% endif %}

  {% if section.settings.video_embed != blank %}
    <div>{{ section.settings.video_embed }}</div>
  {% endif %}

  {% if section.settings.video != blank %}
    <video controls>
      <source src="{{ section.settings.video }}" type="video/mp4">
    </video>
  {% endif %}

  {% if section.settings.product_description_video != blank %}
    <p><strong>üé• Product Video:</strong> <a href="{{ section.settings.product_description_video }}">{{ section.settings.product_description_video }}</a></p>
  {% endif %}

  {% if section.settings.image_with_text_image != blank %}
    <img src="{{ section.settings.image_with_text_image | img_url: 'medium' }}" alt="Selected Image" width="64px" height="64px">
  {% endif %}

  <p><strong>üîã Battery Message:</strong> {{ section.settings.battery_message }}</p>

  {% if section.settings.menu != blank %}
    <h3>Menu:</h3>
    <ul>
      {% for link in section.settings.menu.links %}
        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
      {% endfor %}
    </ul>
  {% endif %}

  <p><strong>üìú Rich Text:</strong> {{ section.settings.paragraph }}</p>
  <p><strong>üñçÔ∏è Inline Rich Text:</strong> {{ section.settings.inline }}</p>

  {% if section.settings.page != blank %}
    <p><strong>üìÑ Page Selected:</strong> <a href="{{ section.settings.page.url }}">{{ section.settings.page.title }}</a></p>
  {% endif %}

  {% if section.settings.button_link != blank %}
    <a href="{{ section.settings.button_link }}" class="btn">üîó Visit</a>
  {% endif %}

  {% if section.settings.enable_payment_button %}
    <p><strong>üí≥ Payment Button:</strong> Enabled</p>
  {% endif %}
</div>

{% schema %}
{
  "name": "Section settings",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show announcement",
      "default": true
    },
    {
      "type": "number",
      "id": "products_per_page",
      "label": "Products per page",
      "default": 20
    },
    {
      "type": "radio",
      "id": "logo_aligment",
      "label": "Logo alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "centered",
          "label": "Centered"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 16
    },
    {
      "type": "select",
      "id": "vertical_alignment",
      "label": "Vertical alignment",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "middle",
          "label": "Middle"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default": "middle"
    },
    {
      "type": "select",
      "id": "sizes",
      "label": "Sizes",
      "options": [
        {
          "value": "xs",
          "label": "X-small"
        },
        {
          "value": "s",
          "label": "Small"
        },
        {
          "value": "m",
          "label": "Medium"
        },
        {
          "value": "l",
          "label": "Large"
        },
        {
          "value": "xl",
          "label": "X-large"
        },
        {
          "value": "xxl",
          "label": "XX-large"
        }
      ],
      "default": "m"
    },
    {
      "type": "text",
      "id": "footer_linklist_title",
      "label": "Heading",
      "default": "Quick links"
    },
    {
      "type": "textarea",
      "id": "home_welcome_message",
      "label": "Welcome message",
      "default": "Welcome to my shop!"
    },
    {
      "type": "article",
      "id": "article",
      "label": "Article"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "collection_list",
      "id": "collection_list",
      "label": "Collections",
      "limit": 8
    },
    {
      "type": "color",
      "id": "body_text",
      "label": "Body text",
      "default": "#000000"
    },
    {
      "type": "color_background",
      "id": "background",
      "label": "Background",
      "default": "linear-gradient(#ffffff, #000000)"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme_1",
      "label": "Color scheme"
    },
    {
      "type": "font_picker",
      "id": "heading_font",
      "label": "Heading font",
      "default": "helvetica_n4"
    },
    {
      "type": "html",
      "id": "video_embed",
      "label": "Video embed"
    },
    {
      "type": "image_picker",
      "id": "image_with_text_image",
      "label": "Image"
    },
    {
      "type": "inline_richtext",
      "id": "inline",
      "default": "my <i>inline</i> <b>text</b>",
      "label": "Inline rich text"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    },
    {
      "type": "liquid",
      "id": "battery_message",
      "label": "Battery message",
      "default": "{% if product.tags contains 'battery' %}This product can only be shipped by ground.{% else %}This product can be shipped by ground or air.{% endif %}"
    },
    {
      "type": "metaobject",
      "id": "my_material_setting",
      "label": "Material",
      "metaobject_type": "shopify--material"
    },
    {
      "type": "metaobject_list",
      "id": "my_material_list_setting",
      "label": "Materials",
      "metaobject_type": "shopify--material",
      "limit": 12
    },
    {
      "type": "page",
      "id": "page",
      "label": "Page"
    },
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "product_list",
      "id": "product_list",
      "label": "Products",
      "limit": 12
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Paragraph"
    },
    {
      "type": "text_alignment",
      "id": "alignment",
      "label": "Text alignment",
      "default": "center"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "video",
      "id": "video",
      "label": "A Shopify-hosted video"
    },
    {
      "type": "video_url",
      "id": "product_description_video",
      "label": "Product description video",
      "accept": ["youtube", "vimeo"]
    },
    {
      "type": "checkbox",
      "id": "enable_payment_button",
      "label": "Show dynamic checkout button",
      "info": "Each customer will see their preferred payment method [Learn more](https://help.shopify.com/manual/online-store/dynamic-checkout)",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Section settings"
    }
  ]
}
{% endschema %}
